#include "libft.h"

void	*ft_memchr(const void *s, int c, size_t n)
{
	unsigned char	*src;
	size_t			i;

	src = (unsigned char *)s;
	i = 0;
	if (i < n)
	{
		if (src[i] == c)
			return ((unsigned char *)src + i);
		i++;
	}
	return (0);
}
